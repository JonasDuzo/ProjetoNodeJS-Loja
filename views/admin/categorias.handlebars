<h2>Lista de Categorias</h2>
<hr>
<div class="text-end mb-2">
    <a href="/admin/categorias/add"><button class="btn btn-success">Adicionar</button></a>
</div>

{{#each categorias}}

<div class="card mt-2" style="display: inline-flex;">
    <div class="card-body">
        <h5 class="card-title">{{nome}}</h5>
        <p class="text-muted small">Slug: {{slug}}</p>

        <a href="/admin/categorias/edit/{{_id}}" class="btn btn-sm btn-outline-primary">Editar</a>

        {{!-- Excluir --}}
        <form method="POST" action="/admin/categorias/excluir" style="display: inline;">
            <input type="hidden" name="id" value="{{_id}}">

            <button type="button" data-bs-toggle="modal" data-bs-target="#modalDeletar-{{_id}}"
                class="btn btn-sm btn-outline-danger">Excluir</button>

            {{!-- <button type="submit" class="btn btn-sm btn-outline-danger">Excluir</button> --}}

            <div class="modal fade" id="modalDeletar-{{_id}}" tabindex="-1" aria-labelledby="modalDeletarLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-danger" id="modalDeletarLabel">ATENÇÃO!</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Você realmente deseja excluir a categoria: {{nome}}?
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-danger">Excluir</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        {{!-- Fim Excluir --}}
    </div>
</div>



{{else}}
<div class="text-center mt-5 text-muted">
    <h5>Nenhuma categoria cadastrada.</h5>
</div>

{{/each}}
<h2>Lista de Postagens</h2>
<hr>
<div class="text-end mb-2">
    <a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>
</div>

{{#each postagens}}

<div class="row mt-2">
    <div class="card mt-2 pb-3 pe-4" style="display: inline-flex;">

        <div class="card-body">
            <h5 class="card-title">{{titulo}}</h5>
            <p class="text-muted small">Data: {{date}} | Slug: {{slug}} | Categoria:
                {{categoria.nome}}</p>
            <p>Descrição: {{descricao}}</p>
            <p>Conteúdo: {{conteudo}}</p>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a href="/admin/postagens/edit/{{_id}}" class="btn btn-sm btn-outline-primary">Editar</a>

            {{!-- Excluir --}}
            <form method="POST" action="/admin/postagens/excluir" style="display: inline;">
                <input type="hidden" name="id" value="{{_id}}">

                <button type="button" data-bs-toggle="modal" data-bs-target="#modalDeletar-{{_id}}"
                    class="btn btn-sm btn-outline-danger">Excluir</button>

                <div class="modal fade" id="modalDeletar-{{_id}}" tabindex="-1" aria-labelledby="modalDeletarLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title text-danger" id="modalDeletarLabel">ATENÇÃO!</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Você realmente deseja excluir a postagem: {{titulo}}?
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-danger">Excluir</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            {{!-- Fim Excluir --}}
        </div>

    </div>
</div>

{{else}}
<div class="text-center mt-5 text-muted">
    <h5>Nenhuma postagem cadastrada.</h5>
</div>
{{/each}}
<h2>Editar Produto</h2>
<hr>

<div class="row mt-5 mb-5">
    {{!-- enctype="multipart/form-data" se utiliza quando o formulário ira enviar algum arquivo --}}
    <form method="POST" action="/admin/produtos/edit" enctype="multipart/form-data">

        <input type="hidden" name="id" value="{{produto._id}}">

        <div class="col-lg-6 offset-lg-3 mb-4" style="text-align: center;">
            <img src="{{produto.imagem}}" width="400px">
        </div>

        <div class="col-lg-6 offset-lg-3 mb-4">
            <label for="nome" class="label-control">Nome</label>
            <input type="text" name="nome" class="form-control" value="{{produto.nome}}" required>
        </div>

        <div class="col-lg-6 offset-lg-3 mb-4">
            <label for="preco" class="label-control">Preço</label>
            <input type="text" id="preco" oninput="validarNumero(this)" value="{{produto.preco}}" name="preco"
                class="form-control" required>
        </div>

        <div class="col-lg-6 offset-lg-3 mb-4" style="display: none;">
            <label for="imagem" class="label-control">Caminho da Imagem</label>
            <input type="text" name="imagem" oninput="validarNumero(this)" value="{{produto.imagem}}" name="preco"
                class="form-control" readonly>
        </div>

        <div class="col-lg-6 offset-lg-3 mb-4">
            <label for="imagem" class="label-control">Imagem</label>
            <input type="file" name="imagem" class="form-control" accept="image/*">
        </div>

        <div class="col-lg-2 offset-lg-5 d-grid mt-5">
            <button type="submit" class="btn btn-success">Editar</button>
        </div>

    </form>
</div>

<script>
    function validarNumero(input) {
        // Substitua tudo que não for número ou ponto por uma string vazia
        input.value = input.value.replace(/[^0-9.]/g, '');
    }
</script>